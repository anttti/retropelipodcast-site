---
layout: layouts/base.njk
---

<main class="relative">
  <div class="relative z-40 pt-40">
    {% set episodes = collections.episodes | reverse %}

    <section class="latest-episode mb-52 mx-auto p-4 max-w-xl relative z-50">
      <div class="decoration"></div>
      <img
        class="absolute"
        style="top: -132px; left: 0"
        src="/img/duosaurus.png"
        alt="Two dinos"
      />
      <img
        class="absolute"
        style="top: -155px; left: 200px"
        src="/img/bluesaurus.png"
        alt="One blue dino"
      />
      <h3 class="mb-4 font-bold">
        {{ episodes[0].data.media.episode }}.
        {{ episodes[0].data.media.title | safe }}
      </h3>
      <p class="mb-4 text-2xl leading-none">
        {{ episodes[0].data.media.summary | safe }}
      </p>
      <podcast-player>
        <audio
          controls="controls"
          preload="none"
          width="100%"
          src="{{ episodes[0].data.media.content }}"
        ></audio>
      </podcast-player>
    </section>

    <div class="relative z-10">
      <div class="bg absolute w-full">
        <div
          class="bg-1 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-10"
        ></div>
        <div
          class="bg-2 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-20"
        ></div>
        <div
          class="bg-3 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-30"
        ></div>
      </div>

      <div class="ground relative z-40 w-full"></div>

      <section class="episodes relative z-40 px-12 py-8">
        <div class="max-w-screen-lg mx-auto">
          <h2 class="mb-8 font-bold text-center">Edelliset jaksot</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for episode in episodes %}
            <li class="p-4 rounded text-2xl leading-none bg-light-bg">
              <h3 class="mb-2 text-sm">
                <a href="{{ episode.data.permalink | url }}"
                  >{{ episode.data.media.episode }}:
                  {{ episode.data.media.title }}</a
                >
              </h3>
              <time
                class="mb-2 block"
                datetime="{{ episode.date | htmlDateString }}"
                >{{ episode.date | readableDate }}</time
              >
              <a
                class="mb-2 underline"
                href="{{ episode.data.permalink | url }}"
                >Kuuntele &rarr;</a
              >
            </li>
            {% endfor %}
          </ul>
        </div>
      </section>
    </div>
  </div>
  {% include '_footer.njk' %}
</main>
