---
layout: layouts/base.njk
---

<main class="relative">
  <div class="relative z-40 pt-40">
    <section class="latest-episode mb-52 mx-auto p-4 max-w-3xl relative z-50">
      <div class="decoration"></div>
      <img
        class="absolute"
        style="top: -132px; left: 0"
        src="/img/duosaurus.png"
        alt="Two dinos"
      />
      <img
        class="absolute"
        style="top: -155px; left: 200px"
        src="/img/bluesaurus.png"
        alt="One blue dino"
      />
      <h3 class="mt-4 font-bold text-center">
        {{ media.episode }}.
        {{ media.title | safe }}
      </h3>

      <div class="max-w-lg mx-auto my-8">
        <podcast-player>
          <audio
            controls="controls"
            preload="none"
            width="100%"
            src="{{ media.data.media.content }}"
          ></audio>
        </podcast-player>
      </div>

      <div class="shownotes mt-4 space-y-2">
        {{ content | safe }}
      </div>
    </section>

    <div class="relative z-10">
      <div class="bg absolute w-full">
        <div
          class="bg-1 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-10"
        ></div>
        <div
          class="bg-2 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-20"
        ></div>
        <div
          class="bg-3 h-full bg-bottom bg-contain bg-repeat-x w-full absolute z-30"
        ></div>
      </div>

      <div class="ground relative z-40 w-full"></div>

      <section class="episodes relative z-40 px-12 py-8"></section>
    </div>
  </div>
</main>
